{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "SS14Notebook",
    "version": "0.1.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "clipboard": {
        "all": false,
        "readText": false,
        "writeText": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": false,
        "exists": false,
        "readDir": false,
        "readFile": true,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": ["$RESOURCE/**"],
        "writeFile": false
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "app", "appimage", "dmg", "nsis", "msi"],
      "identifier": "ru.ss14notebook.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "data/*",
        "data/databases/*",
        "data/databases/sql/*"
      ],
      "windows": {
        "allowDowngrades": true,
        "webviewInstallMode": {
          "silent": true,
          "type": "embedBootstrapper"
        },
        "nsis": {
          "installerIcon": "icons/icon.ico"
        },
        "wix": {
          "language": "ru-RU"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "SS14.Notebook",
        "maximized": true
      }
    ]
  }
}
